extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 CLAV: Classificação e Avaliação da Informação Pública
            .w3-container
                h4 Tipologias
                table.w3-table-all
                    each tipologia in lista
                        tr
                            td
                                a(href='/tipologias/' + tipologia.id)= tipologia.designacao
                            td(id=tipologia.id)= tipologia.id
            footer.w3-container.w3-teal