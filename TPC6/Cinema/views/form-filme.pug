extends layout

block content
  .w3-container
    h1 Inserção do filme
    form.w3-container(action="/filmes" method="post")
        label Identificador
        input.w3-input(type="text" name="_id")
        label Título
        input.w3-input(type="text" name="title")
        label Ano
        input.w3-input(type="text" name="year")
        label Elenco 
        input.w3-input(type="text" name="cast")
        label Género 
        input.w3-input(type="text" name="genre")
        input.w3-input(type="submit" value="Enviar")